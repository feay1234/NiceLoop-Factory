<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="niceloop.th.factory"
    android:versionCode="1"
    android:versionName="1.0"
    android:configChanges="keyboardHidden|orientation|screenSize" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="niceloop.th.factory.MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="niceloop.th.factory.FeedActivity"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name="niceloop.th.factory.ManageActivity"
            android:label="@string/title_activity_manage"
            android:theme="@style/Theme.AppCompat" >
        </activity>
        <activity
            android:name="niceloop.th.factory.CommentActivity"
            android:label="@string/title_activity_comment"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="niceloop.th.factory.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
        <activity
            android:name="niceloop.th.factory.GalleryPage"
            android:label="@string/title_activity_gallery_page" >
        </activity>
    </application>

</manifest>
